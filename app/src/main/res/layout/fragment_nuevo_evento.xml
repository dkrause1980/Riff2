<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nuevo_Evento">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <EditText
            android:id="@+id/et_tipo_evento"
            android:layout_width="270dp"
            android:layout_height="44dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:hint="TIPO DE EVENTO"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/bt_tipo_evento"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_baseline_article_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/bt_direccion"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_baseline_home_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_tipo_evento" />

        <EditText
            android:id="@+id/et_calle"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:hint="CALLE"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_tipo_evento"
            />

        <EditText
            android:id="@+id/et_altura"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:hint="ALTURA"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_calle"
            />

        <EditText
            android:id="@+id/et_piso"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:enabled="false"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:hint="PISO"
            app:layout_constraintStart_toEndOf="@+id/et_altura"
            app:layout_constraintTop_toBottomOf="@+id/et_calle"
            />

        <EditText
            android:id="@+id/et_depto"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:hint="DTO"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/et_piso"
            app:layout_constraintTop_toBottomOf="@+id/et_calle"
            />

        <ImageButton
            android:id="@+id/bt_ubicacion"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/ic_baseline_gps_fixed_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_direccion" />

        <EditText
            android:id="@+id/et_latitud"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:hint="LATITUD"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_altura"
            />

        <EditText
            android:id="@+id/et_longitud"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:hint="LONGITUD"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_latitud"
            />

        <ImageButton
            android:id="@+id/bt_comentario"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/ic_baseline_add_comment_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_ubicacion" />

        <EditText
            android:id="@+id/et_comentario"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:textColor="@color/black"
            android:enabled="false"
            android:inputType="textPersonName"
            android:hint="COMENTARIO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_longitud"
            />

        <Button
            android:id="@+id/bt_enviar"
            android:layout_width="351dp"
            android:layout_height="50dp"
            android:layout_marginTop="88dp"
            android:background="@drawable/rounded_corner"
            android:text="ENVIAR"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_comentario" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>